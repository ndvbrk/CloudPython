{% extends 'layout.jinja2' %}

{% block styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/forms.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
<div class="formwrapper">
  <h2 class="title">Approve Registered User</h2>
  <p>Submit this form to approve the registration of:</p>
  <p>{{email}}</p>
  <form method="POST" action="/admin/approve_user_submit">
      <div class="form-field">{{ form.token }}
        {% if form.token.errors %}
          <ul class="errors">
            {% for error in form.token.errors %}
              <li>{{ error }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      {{ form.csrf_token }}
      {{ form.submit }}
  </form>
</div>
{% endblock %}